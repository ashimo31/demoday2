<ul>
  <% messages.each do |message| %>
    <% unless message.id.nil? %>
      <li>
        <p class="left"><%= message.user.name %>さんがコメントしました。</p>
        <p class="left"><%= message.content %></p>
        <% if current_user.id == message.user.id %>
          <p class="right">
            <%= link_to '', edit_task_message_path(task, message), class: "fa fa-pencil-square-o fa-lg" %>
            <%= link_to '', task_message_path(task, message), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>

<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="blog-text">
      <p class="left"><strong>タイトル</strong></p>
      <p class="left"><%= @task.title %></p>
      <p class="left"><strong>内容</strong></p>
      <p class="left"><%= @task.content %></p>
      <p class="right">
        <strong>作成時間:</strong>
        <%= @task.created_at.strftime("%y/%m/%d %p %l:%M") %>
      </p>
    </div>
    <p>メッセージ一覧</p>
    <div id="messages_area">
      <%= render partial: 'messages/index', locals: { messages: @messages, task: @task } %>
    </div>
    <%= render partial: 'messages/form', locals: { message: @message, task: @task } %>
    <% if current_user.id == @task.user_id %>
      <%= link_to '修正する', edit_task_path(@task) %> |
    <% end %>
    <%= link_to '戻る', tasks_path %>
  </div>
</div>

<h1>リクエストの編集</h1>

<% @tasks.each do |task| %>
  <p>タイトル:<%= task.title %></p>
  <p>本文:<%= task.content %></p>
  <p>地域:<%= task.area %></p>
  <p>期限:<%= task.deadline %></p>
  <p>価格:<%= task.price %></p>
  <p>ステータス:<%= task.status %></p>
  <p>リアクション:<%= task.reaction %></p>
<% end %>

<%= link_to "リクエスト一覧に戻る", tasks_path %>
